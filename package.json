{
  "name": "@ffee/auto-import",
  "version": "0.1.4",
  "description": "A tool for automatically update and import NPM module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "test": "npm run jest",
    "jest": "jest",
    "dev": "tsc --watch",
    "build": "npm run clean && tsc",
    "clean": "rm -rf ./lib",
    "pub": "npm run build;npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ffee-team/auto-import.git"
  },
  "keywords": [
    "auto",
    "import",
    "module"
  ],
  "author": "lmtdit@msn.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ffee-team/auto-import/issues"
  },
  "homepage": "https://github.com/ffee-team/auto-import#readme",
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "^27.0.1",
    "@types/node": "^10.17.60",
    "@types/node-fetch": "^2.5.12",
    "@types/request": "^2.48.7",
    "@types/semver": "^7.3.8",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "jest": "^27.1.1",
    "lint-staged": "^9.5.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "debug": "^4.3.2",
    "fs-extra": "^10.0.0",
    "npminstall": "^4.11.0",
    "request": "^2.88.2",
    "semver": "^7.3.5"
  },
  "engines": {
    "node": ">=10"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "collectCoverage": true,
    "testRegex": "(/__tests__/(.+)\\.(test|spec))\\.ts",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testPathIgnorePatterns": [
      "/(node_modules|lib|coverage|types)/"
    ]
  }
}